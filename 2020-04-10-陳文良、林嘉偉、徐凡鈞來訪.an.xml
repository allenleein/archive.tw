    <debate>
        <meta>
            <references>
                <TLCPerson href="/ontology/person/::/唐鳳" id="唐鳳" showAs="唐鳳"/>
                <TLCPerson href="/ontology/person/::/陳文良" id="陳文良" showAs="陳文良"/>
                <TLCPerson href="/ontology/person/::/林嘉偉" id="林嘉偉" showAs="林嘉偉"/>
                <TLCPerson href="/ontology/person/::/徐凡鈞" id="徐凡鈞" showAs="徐凡鈞"/>
            </references>
