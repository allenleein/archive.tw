    <debate>
        <meta>
            <references>
                <TLCPerson href="/ontology/person/::/黃子維" id="黃子維" showAs="黃子維"/>
                <TLCPerson href="/ontology/person/::/何小鳳" id="何小鳳" showAs="何小鳳"/>
                <TLCPerson href="/ontology/person/::/許恩恩" id="許恩恩" showAs="許恩恩"/>
                <TLCPerson href="/ontology/person/::/張惠萍" id="張惠萍" showAs="張惠萍"/>
                <TLCPerson href="/ontology/person/::/游慧真" id="游慧真" showAs="游慧真"/>
